{
  "name": "@ecorp/monorepo",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:ui-lib dev:next-app",
    "dev:ui-lib": "npm run dev --workspace=ui-lib",
    "dev:next-app": "npm run dev --workspace=next-app",
    "storybook": "npm run --workspace=ui-lib storybook"
  },
  "workspaces": [
    "ui-lib",
    "next-app"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
